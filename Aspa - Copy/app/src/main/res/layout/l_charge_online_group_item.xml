<?xml version="1.0" encoding="utf-8"?>
<ir.aspacrm.my.app.mahan.component.SquareCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        android:layout_marginLeft="2.5dp"
        android:layout_marginRight="2.5dp"
        android:id="@+id/layMainGroup"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:clickable="true"
        android:foreground="@drawable/ripple_list_item"
        app:cardBackgroundColor="@color/back_items">
<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">
    <ir.aspacrm.my.app.mahan.component.PersianTextViewThin
            android:id="@+id/txtGroupName"
            android:text="نامشخص"
            android:gravity="center"
            android:textSize="@dimen/size_font_small"
            android:textColor="@color/txt_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>
</ir.aspacrm.my.app.mahan.component.SquareCardView>
