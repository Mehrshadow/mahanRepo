<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/layMainDialog"
              android:background="@color/back_items"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:layout_gravity="center"
                   android:id="@+id/imgCloseDialog"
                   android:layout_margin="3dp"
                   android:src="@drawable/ic_expand_more_black_24dp"
                   android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:text="خروج"
                android:gravity="center"
                android:id="@+id/txtDialogTitle"
                android:textSize="@dimen/size_font_very_small"
                android:typeface="serif"
                android:textColor="@color/text_color_items"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:text="آیا مطمئن هستید میخواهید از حساب کاربری خود خارج شوید؟"
                android:gravity="center"
                android:id="@+id/txtDialogDescription"
                android:typeface="serif"
                android:textSize="@dimen/size_font_very_very_small"
                android:textColor="@color/text_color_items"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="wrap_content">
        <include layout="@layout/lay_btn_ok" android:id="@+id/layBtnCancel"/>
        <include layout="@layout/lay_btn_cancel" android:id="@+id/layBtnOk"/>
    </LinearLayout>
</LinearLayout>
