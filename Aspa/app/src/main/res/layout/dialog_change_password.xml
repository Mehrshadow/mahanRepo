<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/layMainDialog"
              android:background="@color/dialog_background"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:layout_gravity="center"
                   android:id="@+id/imgCloseDialog"
                   android:layout_margin="3dp"
                   android:src="@drawable/ic_expand_more_black_24dp"
                   android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:text="تغییر کلمه عبور"
                android:gravity="center"
                android:textSize="@dimen/size_font_very_small"
                android:typeface="serif"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:text="برای تغییر دادن کلمه عبور، رمز جدید را وارد نمایید سپس بر روی ثبت کلیک کنید."
                android:gravity="right"
                android:typeface="serif"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/size_font_very_very_small"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_edittext"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/edtCurrentPassword"
                    android:layout_width="match_parent"
                    android:drawableRight="@drawable/ic_lock_white_24dp"
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"
                    android:background="@color/trans"
                    android:minHeight="40dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_font_very_very_small"
                    android:singleLine="true"
                    android:imeOptions="actionGo"
                    android:typeface="serif"
                    android:hint="رمز فعلی"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:padding="3dp"
            android:background="@drawable/border_edittext"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/edtNewPassword"
                android:layout_width="match_parent"
                android:drawableRight="@drawable/ic_lock_white_24dp"
                android:drawablePadding="10dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_very_very_small"
                android:singleLine="true"
                android:textColor="@color/white"
                android:background="@color/trans"
                android:minHeight="40dp"
                android:imeOptions="actionGo"
                android:typeface="serif"
                android:hint="رمز جدید"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="3dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_edittext"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/edtReNewPassword"
                android:layout_width="match_parent"
                android:drawableRight="@drawable/ic_lock_white_24dp"
                android:drawablePadding="10dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_very_very_small"
                android:singleLine="true"
                android:background="@color/trans"
                android:textColor="@color/white"
                android:minHeight="40dp"
                android:imeOptions="actionGo"
                android:typeface="serif"
                android:hint="تکرار رمز جدید"/>
    </LinearLayout>

    <TextView android:layout_width="match_parent"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:layout_marginTop="5dp"
              android:id="@+id/txtShowErrorMessage"
              android:textColor="@color/colorAccent"
              android:typeface="sans"
              android:textSize="@dimen/size_font_very_very_small"
              android:layout_height="wrap_content"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:layout_height="wrap_content">
        <include layout="@layout/lay_btn_ok" android:id="@+id/layBtnChange"/>
    </LinearLayout>
</LinearLayout>
