<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/layMainDialog"
              android:background="@color/dialog_background"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/layCloseDialog"
            android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:layout_gravity="center"
                   android:id="@+id/imgCloseDialog"
                   android:layout_margin="3dp"
                   android:src="@drawable/ic_expand_more_black_24dp"
                   android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ir.aspacrm.my.app.mahan.G.component.PersianTextViewNormal
                android:layout_width="match_parent"
                android:text="پیغام"
                android:gravity="center"
                android:id="@+id/txtMessageTitle"
                android:textSize="@dimen/size_font_very_small"
                android:typeface="serif"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
        <net.kianoni.fontloader.TextView
                android:layout_width="match_parent"
                android:text=""
                android:id="@+id/txtMessageDescription"
                android:gravity="center"
                app:fontFile="fonts/biran.ttf"
                android:textSize="@dimen/size_font_small"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
        <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="0dp"/>
        <android.support.v7.widget.CardView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:minWidth="120dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/layBtnCancel"
                android:clickable="true"
                android:foreground="@drawable/ripple_list_item"
                app:cardBackgroundColor="@color/red"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                <ir.aspacrm.my.app.mahan.G.component.PersianTextViewThin
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:typeface="serif"
                        android:minHeight="36dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text="انصراف"
                        android:textSize="@dimen/size_font_very_small"
                        android:textColor="@color/white"/>
                <!--<ImageView android:layout_width="@dimen/size_image_very_small"-->
                <!--android:src="@drawable/ic_close_white_36dp"-->
                <!--android:layout_marginRight="3dp"-->
                <!--android:layout_height="@dimen/size_image_small"/>-->
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/layBtnStartFactor"
                android:clickable="true"
                android:foreground="@drawable/ripple_list_item"
                app:cardBackgroundColor="@color/light_green"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                <ir.aspacrm.my.app.mahan.G.component.PersianTextViewThin
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:typeface="serif"
                        android:minHeight="36dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text="شروع کردن"
                        android:textSize="@dimen/size_font_very_small"
                        android:textColor="@color/white" android:id="@+id/txtPackagePrice"/>
                <ImageView android:layout_width="@dimen/size_image_very_small"
                           android:src="@drawable/ic_start_timer_white_64px"
                           android:layout_marginRight="3dp"
                           android:layout_height="@dimen/size_image_small"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="0dp"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="35dp"/>
</LinearLayout>
