<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:layout_width="match_parent">
    <!--<View android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:layout_gravity="center"-->
    <!--android:background="@color/light_grey"/>-->
    <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            app:contentPaddingBottom="0dp"
            app:contentPaddingTop="0dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="true"
            app:contentPaddingLeft="0dp"
            app:contentPaddingRight="0dp"
            app:cardBackgroundColor="@color/account_info_background"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">
        <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView android:layout_width="@dimen/size_image_small"
                       android:src="@drawable/ic_person_white_48dp"
                       android:padding="5dp"
                       android:id="@+id/imgUserInfo"
                       android:clickable="true"
                       android:background="@drawable/ripple_light_oval"
                       android:layout_marginLeft="3dp"
                       android:layout_marginRight="3dp"
                       android:layout_height="@dimen/size_image_small"/>
            <ImageView android:layout_width="@dimen/size_image_small"
                       android:src="@drawable/ic_lock_white_48dp"
                       android:padding="5dp"
                       android:clickable="true"
                       android:background="@drawable/ripple_light_oval"
                       android:id="@+id/imgChangePassword"
                       android:layout_marginLeft="3dp"
                       android:layout_marginRight="3dp"
                       android:layout_height="@dimen/size_image_small"/>
            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <ImageView android:layout_width="@dimen/size_image_small"
                           android:src="@drawable/ic_notifications_white_48dp"
                           android:padding="5dp"
                           android:id="@+id/imgNotification"
                           android:clickable="true"
                           android:layout_gravity="center"
                           android:background="@drawable/ripple_light_oval"
                           android:layout_marginLeft="3dp"
                           android:layout_marginRight="3dp"
                           android:layout_height="@dimen/size_image_small"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/layUnSeenNotify"
                        android:layout_width="@dimen/size_layBack_notify_child_slide"
                        android:layout_height="@dimen/size_layBack_notify_child_slide"
                        android:layout_gravity="right"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/circle_background">

                    <ir.aspacrm.my.app.mahan.G.component.SizeAdjustingTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="999"
                        android:textSize="@dimen/size_font_very_very_small"
                        android:id="@+id/txtUnSeenNotify"
                        android:gravity="center"
                        android:typeface="serif"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <ImageView android:layout_width="@dimen/size_image_small"
                           android:src="@drawable/ic_rss_feed_48dp_white"
                           android:padding="8dp"
                           android:clickable="true"
                           android:id="@+id/imgNews"
                           android:layout_gravity="center"
                           android:background="@drawable/ripple_light_oval"
                           android:layout_marginLeft="3dp"
                           android:layout_marginRight="3dp"
                           android:layout_height="@dimen/size_image_small"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/layUnSeenNews"
                        android:layout_width="@dimen/size_layBack_notify_child_slide"
                        android:layout_height="@dimen/size_layBack_notify_child_slide"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="right"
                        android:background="@drawable/circle_background">

                    <ir.aspacrm.my.app.mahan.G.component.SizeAdjustingTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="555"
                        android:textSize="@dimen/size_font_very_very_small"
                        android:id="@+id/txtUnSeenNews"
                        android:gravity="center"
                        android:typeface="serif"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </FrameLayout>

            <ImageView android:layout_width="@dimen/size_image_small"
                       android:src="@drawable/ic_info_white_48dp"
                       android:padding="5dp"
                       android:clickable="true"
                       android:background="@drawable/ripple_light_oval"
                       android:id="@+id/imgCompanyInfo"
                       android:layout_marginLeft="3dp"
                       android:layout_marginRight="3dp"
                       android:layout_height="@dimen/size_image_small"/>
            <ImageView android:layout_width="@dimen/size_image_small"
                       android:src="@drawable/ic_exit_to_app_white_48dp"
                       android:layout_marginLeft="3dp"
                       android:layout_marginRight="3dp"
                       android:clickable="true"
                       android:background="@drawable/ripple_light_oval"
                       android:padding="5dp"
                       android:id="@+id/imgLogout"
                       android:layout_height="@dimen/size_image_small"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
