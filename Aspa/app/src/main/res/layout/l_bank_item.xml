<?xml version="1.0" encoding="utf-8"?>
<ir.aspacrm.my.app.mahan.G.component.SquareCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="3dp"
        android:layout_marginLeft="2.5dp"
        android:layout_marginRight="2.5dp"
        android:id="@+id/layMainBank"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:clickable="true"
        android:foreground="@drawable/ripple_list_item"
        app:cardBackgroundColor="@color/dark_grey">
<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">
    <ImageView
            android:layout_width="match_parent"
            android:id="@+id/imgBankLogo"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"/>
    <ir.aspacrm.my.app.mahan.G.component.PersianTextViewThin
            android:id="@+id/txtBankName"
            android:text="نامشخص"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/size_font_small"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>
</ir.aspacrm.my.app.mahan.G.component.SquareCardView>
